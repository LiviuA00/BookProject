<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test CRUD</title>

    <link rel="stylesheet" href="/semantic.min.css">
    <link rel="stylesheet" href="/public/stylessCrud.css">
</head>
<body>
   


    <br>
    <br>
    <br>
    <div class="ui container">
        <form action="/test/add" class="ui form" method="post">
            <div class="ui three fields">
                <div class="field">
                    <label for="title" class="ui header blue">Enter book title</label>
                    <input type="text" name="title">
                </div>
                <div class="field">
                    <label for="author" class="ui header blue">Enter book author</label>
                    <input type="text" name="author">
                </div>
                <div class="field">
                    <label for="review" class="ui header blue">Enter book review</label>
                    <input type="text" name="review">
                </div>
            </div>
            <div class="ui fluid field">
                <input type="submit" value="save" class="ui button blue fluid">
            </div>
        </form>


        <br>
        <br>
        <table class="ui blue table">
            <thead>
                <tr>
                    <th>Book title</th>
                    <th>Author</th>
                    <th>Review</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach((book) => { %>
                    <tr>
                        <td><%- book.title %></td>
                        <td><%- book.author %></td>
                        <td><%- book.review %></td>
                        <td><a class="ui blue button" href="/test/edit/<%= book._id%>"><i class="edit outline icon"></i></a></td>
                        <!-- <%= book._id %> -->
                        <td><a class="ui red button" href="/test/delete/<%= book._id%>"><i class="minus icon"></i></a></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <script src="/semantic.min.js"></script>
</body>
</html>


